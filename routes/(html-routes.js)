
var path = require("path");

module.exports = function(app) {

  app.get("/", function(req, res) {
    res.sendFile(path.join(__dirname, "../views/layouts/home-login.html"));
  });

  app.get("/user", function(req, res) {
    res.sendFile(path.join(__dirname, "../views/layouts/user-dashboard.html"));
  });

};